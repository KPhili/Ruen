<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.AppCompat.TextView.TranslateTextView">
        <item name="android:layout_marginTop">@dimen/translateView_marginTop</item>
        <item name="android:textSize">@dimen/translateView_textSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipCornerRadius">@dimen/chip_radius</item>
    </style>

    <style name="KnowButton">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4071A3</item>
        <item name="android:theme">@style/Widget.Material3.Button</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorOnToolbar</item>
    </style>

    <style name="ToolBar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NewCardBottomSheetModal" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>