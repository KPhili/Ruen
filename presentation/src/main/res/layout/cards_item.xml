<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rvItem_margin"
    android:background="@drawable/rect_round_all_corners_background">

    <TextView
        android:id="@+id/wordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:layout_margin="@dimen/rvItem_wordView_margin"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/cardsItem_textSize"
        tools:text="size" />

    <TextView
        android:id="@+id/dateTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginHorizontal="@dimen/rvItem_dateTimeView_marginHorizontal"
        android:layout_marginBottom="@dimen/cardsItem_dateTimeView_marginBottom"
        tools:text="28.11.2022 15:12"
        android:textColor="?colorPrimaryVariant"
        android:textSize="@dimen/cardsItem_dateTimeView_textSize" />
</FrameLayout>